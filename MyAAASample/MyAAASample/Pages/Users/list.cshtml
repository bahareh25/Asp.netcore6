@page
@model MyAAASample.Pages.Users.listModel
@{
}
<h3>Users List</h3>
<hr />
<table class="table table-striped table-bordered">
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Family</td>
        <td>UserName</td>
        <td>Email</td>
        <td>Actions</td>
    </tr>
   @if (@Model.Users.Count()<1)
    {
        <tr>
            <td colspan=6>there is no users</td></tr>
    }
    else{
        foreach (var item in @Model.Users) {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Family</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                 <a asp-page="ManageRole" asp-route-id="@item.Id" class="btn btn-info">ManageRole</a>
                <form method="post">
                    <input type="hidden" name="id" value="@item.Id"/>
                    <button type="submit" class="btn btn-danger">Remove</button>
                </form></td>
        </tr>}
    }

</table>
<a class="btn btn-success" asp-page="Create">Create</a>