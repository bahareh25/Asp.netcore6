@{

    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col_3">
        <input  type="button" id="ajaxButton" value="Load data" />

    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        (()=>{
      
        let httpRequest;
         setTimeout(makeAjaxRequest,5000);
        function makeAjaxRequest(){
            httpRequest=new  XMLHttpRequest();
            if(!httpRequest)
            {
                Alert("invaled object");
                return false;
            }
            httpRequest.onreadystatechange=alertcontent;
            httpRequest.open("Get","Data/Index");
            httpRequest.send();
             setTimeout(makeAjaxRequest,50000);
        }
        function alertcontent()
        {
            if (httpRequest.readyState==XMLHttpRequest.DONE)
            {
                if(httpRequest.status==200)
                {alert(httpRequest.responseText);}
                else{
                    alert("Bad Response");
                }
            }
        }
        })();
        </script>
}